              "valid_from": {
                "type": "string",
                "format": "date-time"
              },
              "exp_date": {
                "type": "string",
                "format": "date-time",
                "default": "0000-00-00T00:00:00.00Z"
              }
            },
            "required": ["purpose", "utilizer", "transformation", "valid_from", "exp_date"],
            "minProperties": 5,
            "maxProperties": 5,
            "additionalProperties": false
          }
        }
